<UserControl
    x:Class="Squalr.View.PointerScanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Squalr.View.Controls"
    xmlns:content="clr-namespace:Squalr.Content"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SqualrPointerScanner"
    d:DesignHeight="320"
    d:DesignWidth="320"
    x:ClassModifier="public"
    DataContext="{Binding PointerScannerViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d">
    <Grid Background="{StaticResource SqualrColorPanel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox
                Grid.Row="0"
                Padding="4"
                BorderBrush="{StaticResource SqualrColorGray74}"
                BorderThickness="2"
                Foreground="{StaticResource SqualrColorWhite}"
                Header="Scan">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0" Background="Transparent">
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="4,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource SqualrColorWhite}"
                            Text="Address" />
                        <Controls:HexDecBox
                            x:Name="PointerScanAddressHexDecBox"
                            Width="196"
                            Height="20"
                            Background="{StaticResource SqualrColorGray20}"
                            BorderThickness="0" />
                        <Menu Padding="4" Background="Transparent">
                            <MenuItem Command="{Binding StartScanCommand}" ToolTip="Start Pointer Scan">
                                <MenuItem.Header>
                                    <Image
                                        Width="16"
                                        Height="16"
                                        Source="{x:Static content:Images.RightArrow}" />
                                </MenuItem.Header>
                            </MenuItem>
                        </Menu>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1" Margin="8">
                        <Controls:HexDecBox
                            x:Name="DepthHexDecBox"
                            Width="64"
                            Height="20"
                            Margin="0,0,8,0"
                            BorderBrush="White"
                            BorderThickness="1" />
                        <TextBlock
                            Padding="0,0,4,0"
                            Foreground="{StaticResource SqualrColorWhite}"
                            Text="Depth" />
                    </WrapPanel>
                    <WrapPanel Grid.Row="2" Margin="8">
                        <Controls:HexDecBox
                            x:Name="PointerRadiusHexDecBox"
                            Width="64"
                            Height="20"
                            Margin="0,0,8,0"
                            BorderBrush="White"
                            BorderThickness="1" />
                        <TextBlock
                            Padding="0,0,4,0"
                            Foreground="{StaticResource SqualrColorWhite}"
                            Text="Max Offset" />
                    </WrapPanel>
                </Grid>
            </GroupBox>
            <GroupBox
                Grid.Row="1"
                Padding="4"
                BorderBrush="{StaticResource SqualrColorGray74}"
                BorderThickness="2"
                Foreground="{StaticResource SqualrColorWhite}"
                Header="Same Process Validation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="28*" />
                    </Grid.RowDefinitions>
                    <Menu
                        Grid.Column="0"
                        Padding="4"
                        Background="Transparent">
                        <MenuItem Command="{Binding StartPointerRebaseCommand}" ToolTip="Remove Invalid Pointers">
                            <MenuItem.Header>
                                <Image
                                    Width="16"
                                    Height="16"
                                    Source="{x:Static content:Images.RightArrow}" />
                            </MenuItem.Header>
                        </MenuItem>
                    </Menu>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,7,0,5"
                        Padding="0,0,4,0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource SqualrColorWhite}"
                        Text="Remove Invalid Pointers" />
                </Grid>
            </GroupBox>
            <GroupBox
                Grid.Row="2"
                Padding="4"
                BorderBrush="{StaticResource SqualrColorGray74}"
                BorderThickness="2"
                Foreground="{StaticResource SqualrColorWhite}"
                Header="New Process Validation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="28*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,7,0,5"
                        Padding="0,0,4,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource SqualrColorWhite}"
                        Text="New Address" />
                    <Controls:HexDecBox
                        x:Name="PointerRetargetAddressHexDecBox"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="180"
                        Height="20"
                        Margin="0,4"
                        Background="{StaticResource SqualrColorFrame}"
                        BorderThickness="0" />
                    <Menu
                        Grid.Column="2"
                        Padding="4"
                        Background="Transparent">
                        <MenuItem Command="{Binding StartPointerRetargetScanCommand}" ToolTip="Retarget Target Address">
                            <MenuItem.Header>
                                <Image
                                    Width="16"
                                    Height="16"
                                    Source="{x:Static content:Images.RightArrow}" />
                            </MenuItem.Header>
                        </MenuItem>
                    </Menu>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>